<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ChristmasMessagePlugin.ChristmasPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Christmas Messages">
    
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#C41E3A" Offset="0.0" />
            <GradientStop Color="#228B22" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <Grid Padding="20" RowSpacing="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Christmas Header -->
            <Border Grid.Row="0" BackgroundColor="White" StrokeThickness="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.3" Radius="15" Offset="0,8" />
                </Border.Shadow>
                
                <VerticalStackLayout Padding="30" Spacing="15">
                    <Label Text="ðŸŽ„ Christmas Message Center ðŸŽ…" 
                           FontSize="26" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center"
                           TextColor="#C41E3A" />
                    
                    <Border BackgroundColor="#228B22" HorizontalOptions="Center">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="18" />
                        </Border.StrokeShape>
                        <Label x:Name="VersionLabel" 
                               Text="v5.0.0 - Holiday Edition" 
                               TextColor="White" 
                               FontAttributes="Bold"
                               Padding="20,10" />
                    </Border>
                </VerticalStackLayout>
            </Border>

            <!-- Christmas Stats -->
            <Grid Grid.Row="1" ColumnSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" BackgroundColor="White" StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="15" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Padding="18" Spacing="10">
                        <Label Text="ðŸŽ" FontSize="28" HorizontalOptions="Center" />
                        <Label Text="Wishes" FontSize="12" TextColor="Gray" HorizontalOptions="Center" />
                        <Label x:Name="WishesCount" Text="0" FontSize="20" FontAttributes="Bold" 
                               TextColor="#C41E3A" HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Border>

                <Border Grid.Column="1" BackgroundColor="White" StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="15" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Padding="18" Spacing="10">
                        <Label Text="â„ï¸" FontSize="28" HorizontalOptions="Center" />
                        <Label Text="Magic" FontSize="12" TextColor="Gray" HorizontalOptions="Center" />
                        <Label x:Name="MagicCount" Text="0" FontSize="20" FontAttributes="Bold" 
                               TextColor="#4169E1" HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Border>

                <Border Grid.Column="2" BackgroundColor="White" StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="15" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Padding="18" Spacing="10">
                        <Label Text="ðŸŒŸ" FontSize="28" HorizontalOptions="Center" />
                        <Label Text="Joy" FontSize="12" TextColor="Gray" HorizontalOptions="Center" />
                        <Label Text="âˆž" FontSize="20" FontAttributes="Bold" 
                               TextColor="#FFD700" HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Border>
            </Grid>

            <!-- Christmas Messages List -->
            <Border Grid.Row="2" BackgroundColor="White" StrokeThickness="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.2" Radius="10" Offset="0,5" />
                </Border.Shadow>
                
                <VerticalStackLayout Padding="25" Spacing="18">
                    <Label Text="ðŸŽ„ Christmas Wishes Board ðŸŽ„" 
                           FontSize="20" 
                           FontAttributes="Bold" 
                           TextColor="#228B22"
                           HorizontalOptions="Center" />
                    
                    <CollectionView x:Name="ChristmasCollection" HeightRequest="300">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border BackgroundColor="#FFF8DC" Margin="0,8" StrokeThickness="2" Stroke="#FFD700">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12" />
                                    </Border.StrokeShape>
                                    
                                    <Grid Padding="20" ColumnSpacing="15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <Label Grid.Column="0" Text="{Binding Icon}" FontSize="24" 
                                               VerticalOptions="Center" />
                                        <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                                            <Label Text="{Binding Message}" FontSize="16" 
                                                   TextColor="#2F4F4F" FontAttributes="Bold" />
                                            <Label Text="{Binding From}" FontSize="12" 
                                                   TextColor="#696969" />
                                        </VerticalStackLayout>
                                        <Label Grid.Column="2" Text="{Binding Time}" FontSize="11" 
                                               VerticalOptions="Center" TextColor="#8B4513" />
                                        <Button Grid.Column="3" Text="â­" FontSize="14" 
                                                BackgroundColor="#FFD700" TextColor="White"
                                                WidthRequest="35" HeightRequest="35"
                                                Clicked="OnStarWish" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Border>

            <!-- Christmas Action Buttons -->
            <Grid Grid.Row="3" ColumnSpacing="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" 
                        Text="ðŸŽ Make Wish" 
                        BackgroundColor="#C41E3A" 
                        TextColor="White"
                        FontAttributes="Bold"
                        HeightRequest="55"
                        Clicked="OnMakeWish" />

                <Button Grid.Column="1" 
                        Text="â„ï¸ Snow Magic" 
                        BackgroundColor="#4169E1" 
                        TextColor="White"
                        FontAttributes="Bold"
                        HeightRequest="55"
                        Clicked="OnSnowMagic" />

                <Button Grid.Column="2" 
                        Text="ðŸŽ„ Clear Board" 
                        BackgroundColor="#228B22" 
                        TextColor="White"
                        FontAttributes="Bold"
                        HeightRequest="55"
                        Clicked="OnClearBoard" />
            </Grid>
        </Grid>
    </ScrollView>
</ContentPage>